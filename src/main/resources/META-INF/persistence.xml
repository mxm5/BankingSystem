<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="BankingSystem">

        <class>Domain.CreditCard</class>
        <class>Domain.BankAccount</class>
        <class>Domain.Branch</class>
        <class>Domain.Customer</class>
        <class>Domain.BankEmployee</class>
        <class>Domain.Transaction</class>

        <properties>
            <!-- Driver for DB database -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <!-- URL for DB -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/BankingSystem"/>
            <!-- jdbc:mysql://localhost:3306/BankingSystem-->
            <!-- Username -->
            <property name="javax.persistence.jdbc.user" value="root"/>
            <!-- Password -->
            <!-- MKuJNV+3W?%wE&D5 -->
            <!-- root -->
            <property name="javax.persistence.jdbc.password" value="root"/>
            <!-- show sql queries -->
            <property name="hibernate.show_sql" value="true"/>
            <!-- format SQL -->
            <property name="hibernate.format_sql" value="true"/>
            <!-- update db -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- hibernate URL for DB -->
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/BankingSystem"/>
            <!-- hibernate Driver for DB database -->
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
        </properties>


    </persistence-unit>
</persistence>
